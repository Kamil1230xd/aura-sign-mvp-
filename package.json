{
  "name": "aura-sign-mvp",
  "private": true,
  "description": "Aura-Sign MVP monorepo with SIWE authentication",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r clean",
    "demo": "pnpm --filter demo-site dev"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "turbo": "^1.11.0"
  },
  "packageManager": "pnpm@8.15.0"
}